function pastry_quiz_menu() {
    $items['quiz'] = array(
        'title' => 'New to donuts? Take the quiz!',
        'page callback' => 'drupal_get_form',
        'page arguments' => array('first_form'),
        'access callback' => TRUE,
        'type' => MENU_NORMAL_ITEM,
