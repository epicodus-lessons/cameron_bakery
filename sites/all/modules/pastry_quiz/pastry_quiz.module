    return $items;
}
function start_form() {
  $form['gluten'] = array(
      '#title' => 'Gluten',
      '#type' => 'radios',
      '#description' => t('Are you gluten intolerant?'),
      '#options' => array(
          t('Yes'),
          t('No'),
      ),
      '#required' => TRUE,
  );

  $form['submit'] = array(
          '#type' => 'submit',
          '#value' => 'submit',
  );

  return $form;
}

