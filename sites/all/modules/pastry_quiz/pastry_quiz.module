function quiz_success() {
  $gluten = $_SESSION['gluten'];
  $tastebud = $_SESSION['tastebud'];
  $calories = $_SESSION['calories'];
  if ($gluten === '0') {
    return '<p>We have gluten-free donuts!</p>';
  }
  else if ($calories === '0') {
    return '<p>Try out our new low-calorie cupcakes!</p>';
  }
  else if ($tastebud === '1') {
    return '<p>We have lunch specials, like ham/cheese croissants!</p>';
  }
}

function start_form_submit($form, &$form_state) {
